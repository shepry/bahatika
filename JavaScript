const canvas = document.getElementById('gameCanvas');
const ctx = canvas.getContext('2d');

let rocketY = canvas.height / 2;
let rocketSpeed = 5;
let playing = false;
let amount = 0;

document.getElementById('playButton').addEventListener('click', () => {
    playing = !playing;
    document.getElementById('playButton').textContent = playing ? 'Cash Out' : 'Play';
});

document.getElementById('amountInput').addEventListener('change', (event) => {
    amount = event.target.value;
});

function drawRocket() {
    ctx.fillStyle = 'black';
    ctx.fillRect(canvas.width / 2 - 25, rocketY, 50, 30);
}

function update() {
    if (playing) {
        rocketY -= rocketSpeed;
    }
}

function draw() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    drawRocket();
    ctx.fillStyle = 'black';
    ctx.font = '20px Arial';
    ctx.fillText(`Amount: ${amount}`, 10, 30);
}

function gameLoop() {
    update();
    draw();
    requestAnimationFrame(gameLoop);
}

gameLoop();
